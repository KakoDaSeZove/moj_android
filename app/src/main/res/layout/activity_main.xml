<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Declares a button that starts 2nd activity -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_button_name"
        android:id="@+id/start_activity"
        android:onClick="btnStartActivityClicked"
        android:drawableLeft="@mipmap/ic_launcher"/>

    <!-- Declares a button that opens a browser -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_button_name"
        android:id="@+id/open_browser"
        android:onClick="btnOpenBrowserClicked"
        android:drawableLeft="@drawable/ic_web_browser"/>
    
</LinearLayout>